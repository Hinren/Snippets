<![CDATA[[HttpPost]
        [ValidateAntiForgeryToken]
        public ActionResult $ActionName$()
        {
            if (ModelState.IsValid)
            {
                $end$
            
                return View();
            }
            else
            {
                SetMessageWarning("", ModelState.Values.SelectMany(v => v.Errors).Where(me => me != null).Select(me => me.ErrorMessage));
                return View();
            }
        }]]>	
              
